.page-header
  = link_to new_batch_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Batch
  %h1 Listing batches

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Details
        %th
        %th
        %th

    %tbody
      - @batches.each do |batch|
        %tr
          %td= batch.name
          %td= batch.details
          %td= link_to 'Show', batch
          %td= link_to 'Edit', edit_batch_path(batch)
          %td= link_to 'Destroy', batch, data: { confirm: 'Are you sure?' }, method: :delete
